<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime App Alert", sticky: false, time: 2000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Overtime App Error", sticky: false, time: 2000) %>
<% else flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, time: 2000) %>
<% end %>